<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List Users</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="user-infor-container">
                <h3 class="mt-3">Update user:</h3>
                <form method="POST" action="/users/update-user/:id">
                    <input hidden value="<%= user.id %>" name="id">
                    <div class="mb-3 mt-3 col-6">
                        <label for="email">Email address</label>
                        <input value="<%= user.email %>" type="email" class="form-control" id="email" name="email"
                            require placeholder="Enter email">

                    </div>
                    <div></div>
                    <div></div>
                    <div class="mb-3 col-6">
                        <label for="username">Username</label>
                        <input value="<%= user.username %>" type="text" class="form-control" id="username"
                            name="username" placeholder="Username" require>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

</html>